{
	"compilerOptions": {
		"baseUrl": ".",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"incremental": true,
		"lib": ["ES2022"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"outDir": "dist",
		"removeComments": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"target": "ESNext"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules/**/*", "dist/**/*"]
}
